{% extends 'base.html.twig' %}

{% block title %}All categories
{% endblock %}

{% block body %}
	<h1>Toutes les séries de la table program :
	</h1>
	{% for category in categories %}
		<div>
			<h2>{{ loop.index }} / {{ category.name }}</h2>
			{# Lien vers la fiche de la série : #}
            <a href="{{ path("category_show", { name: category.name }) }}">Voir la fiche</a>
		</div>
	{% else %}
		Aucune catégorie trouvée.
	{% endfor %}

	<a href="{{ path('app_index')}}">
		Retour à l'accueil
	</a>
{% endblock %}
